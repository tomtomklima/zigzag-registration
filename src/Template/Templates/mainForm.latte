{extends "layout.latte"}

{define headline}
	{$eventName}
{/define}

{define content}
	<p>{$eventDescription}</p>
	{foreach $categories as $category}
		<p>
		<h3 class="headline">{$category['categoryName']} 
		<span class="blue">{$category['categoryDescription']} </span> </h3>
		
		{foreach $category['options'] as $option}
			{$option['optionName']} - {$option['optionInfo']}
		{/foreach}
		</p>
	{/foreach}
{/define}